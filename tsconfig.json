{
  "compilerOptions": {
    "declaration": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "outDir": "lib",
    "rootDirs": ["src"],
    "strict": true,
    "target": "es2017",
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "lib": ["es2017", "dom"],
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "api/**/*",
    "app/**/*",
    "constants/**/*",
    "contents/**/*",
    "contract/**/*",
    "design/**/*",
    "tools/**/*"
  ],
  "exclude": ["node_modules", "node_modules/*", "dist"]
}
